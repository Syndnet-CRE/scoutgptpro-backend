    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "papaparse": "^5.4.1",
    "pg": "^8.16.3",
    "proj4": "^2.20.2",
    "shapefile": "^0.6.6"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prisma": "^6.1.0"
  }
}
